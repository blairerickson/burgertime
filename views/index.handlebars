
<h1>Burger Time</h1>

<ul>
  <h3>Waiting to be eaten</h3>
  {{#each burgers}}
    <li>
      <p>
        {{this.id}}. {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <button type="submit">DEVOUR</button>
        </form>
      </p>
    </li>
  {{/each}}
</ul>

<h2>Add a Burger </h2>
<form method="POST" action="/" class="button-size">
	<textarea type="text" name="burger_name"></textarea>
	<button type="submit">Save burger_name!</button>
</form>


<ul><h3>Burgers Devoured</h3>
  {{#each eaten}}
    <li>
      <p>
        {{this.id}}. {{this.burger_name}}
      </p>
    </li>
  {{/each}}
</ul>
